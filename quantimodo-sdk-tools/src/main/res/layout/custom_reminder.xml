<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/notification_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <!--<ImageView-->
            <!--android:id="@+id/imNotification"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_width="64dp"-->
            <!--android:layout_height="64dp"-->
            <!--android:padding="16dp"-->
            <!--android:src="@drawable/ic_action_appicon"-->
            <!--android:background="@color/notification_icon_background" />-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/notification_reminder_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/notification_separator"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/custom_reminder_snooze"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@drawable/selector"
            android:textColor="@android:color/white"
            android:text="@string/reminders_notif_button_snooze"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/notification_separator" />
        <Button
            android:id="@+id/custom_reminder_edit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@drawable/selector"
            android:textColor="@android:color/white"
            android:text="@string/reminders_notif_button_edit"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/notification_separator" />
        <Button
            android:id="@+id/custom_reminder_track"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@drawable/selector"
            android:textColor="@android:color/white"
            android:text="@string/reminders_notif_button_track"/>

    </LinearLayout>

</LinearLayout>