<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:text="What to track?"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/card_middle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variable"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/custom_reminder_variable_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:minWidth="120dp"
                android:textColorHint="#B2B2B2"
                android:textColor="#777777"
                android:textSize="15sp"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions" />
            <ProgressBar
                android:id="@+id/custom_reminder_progress"
                android:layout_width="30dp"
                android:layout_height="30dp"
                style="?android:attr/progressBarStyleSmall"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:layout_alignEnd="@id/custom_reminder_variable_edit"
                android:layout_alignRight="@id/custom_reminder_variable_edit"
                android:layout_alignTop="@id/custom_reminder_variable_edit"
                android:layout_alignBottom="@id/custom_reminder_variable_edit"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lvVariableSuggestions"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="12dp"
        android:background="@drawable/card_complete"
        android:scrollbarStyle="outsideOverlay"
        android:clipToPadding="false"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:translationY="-2dp"
        android:background="@drawable/card_complete">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"/>

        <Spinner
            android:id="@+id/spVariableCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#CCCCCC"
            android:inputType="none"
            android:layout_marginRight="12dp"
            />

        </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/card_complete">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:text="Value"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:text="Unit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:textSize="15sp"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/reminders_create_units_spinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:textSize="15sp"/>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Reminder Frequency"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/reminders_create_freq_spinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:textSize="15sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/card_complete">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/selector"
            android:textSize="17sp"
            android:text="Save"/>
    </FrameLayout>
</LinearLayout>
</ScrollView>